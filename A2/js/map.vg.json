{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Price Per Liter of Petrol ($US) 2022",
  "width": 900,
  "height": 500,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/jtru0014/3179/main/Week9Hw/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "background": "mintcream",
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/jtru0014/3179/main/Week9Hw/data/Petrol%20Dataset%20June%2023%202022.csv"
        },
        "key": "Country",
        "fields": ["Price Per Liter (USD)", "GDP Per Capita ( USD )", "Daily Oil Consumption (Barrels)"]
      }
    }
  ],
  "layer": [
    {
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "Price Per Liter (USD)",
          "type": "quantitative",
          "scale": {"type": "log"}
        }
      }
    },
    {
      "mark": {"type": "geoshape", "fill": "grey"}, 
      "transform": [{"filter": "datum['Price Per Liter (USD)'] === null || datum['Country'] === null"}]
      
    }
  ],
  "encoding": {
    "tooltip": [
      {"field": "properties.NAME", "type": "ordinal", "title": "Country"},
      {"field": "Price Per Liter (USD)", "type": "quantitative", "format": "$,.2f"},
      {"field": "GDP Per Capita ( USD )", "type": "ordinal"},
      {"field": "Daily Oil Consumption (Barrels)", "type": "ordinal"}
    ]
  }
}
