{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Petrol (10 Oct 2020)",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/jtru0014/3179/main/Week9Hw/js/ne_110m_admin_0_countries.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/jtru0014/3179/main/Week9Hw/data/Petrol%20Dataset%20June%2023%202022.csv"
          },
          "key": "Country",
          "fields": ["Price Per Liter (USD)"]
        }
      }
      
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "Price Per Liter (USD)",
        "type": "quantitative",
        "scale": {"type": "log"},
        "condition": {
          "test": "datum['Price Per Liter (USD)'] === null || datum['Country'] === null",
          "value": "#aaa"
        }
      },

      "tooltip": [
        {"field": "properties.ADMIN", "type": "nominal", "title": "Country"},
        {"field": "Price Per Liter (USD)", "type": "quantitative"}
      ]
    }
  }